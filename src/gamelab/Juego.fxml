<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="root" stylesheets="@juego.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gamelab.Controladores.JuegoController">
   <top>
      <HBox alignment="CENTER" prefHeight="80.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <!-- Marcador del Jugador (Izquierda) -->
            <VBox alignment="CENTER" styleClass="score-box">
               <children>
                  <Label text="Jugador" />
                  <HBox fx:id="playerScoreBox" alignment="CENTER" spacing="5.0" />
               </children>
            </VBox>
            
            <HBox HBox.hgrow="ALWAYS" /> <!-- Espaciador flexible -->
            
             <!-- Cronómetro (Centro) -->
            <VBox alignment="CENTER" styleClass="timer-box">
               <children>
                  <Label text="Tiempo" />
                  <Label fx:id="timerLabel" text="00:00">
                     <font><Font name="Consolas Bold" size="24.0" /></font>
                  </Label>
               </children>
            </VBox>
            
            <HBox HBox.hgrow="ALWAYS" /> <!-- Espaciador flexible -->

            <!-- Marcador del Bot (Derecha) -->
            <VBox alignment="CENTER" styleClass="score-box">
               <children>
                  <Label text="Bot" />
                  <HBox fx:id="botScoreBox" alignment="CENTER" spacing="5.0" />
               </children>
            </VBox>
         </children>
         <padding><Insets left="20.0" right="20.0" /></padding>
      </HBox>
   </top>
   <center>
      <!-- Tablero de Juego 3x3 -->
      <GridPane fx:id="gameGrid" alignment="CENTER" gridLinesVisible="true" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
   </center>
   <bottom>
       <!-- Mensaje de Estado -->
      <Label fx:id="statusLabel" alignment="CENTER" prefHeight="50.0" text="¡Comienza la partida! Tu turno (X)" BorderPane.alignment="CENTER">
         <font><Font name="System Bold" size="18.0" /></font>
      </Label>
   </bottom>
</BorderPane>